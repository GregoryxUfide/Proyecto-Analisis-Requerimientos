@model Sprint2.ViewModel.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdProducto" />

    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescripcionProducto"></label>
        <textarea asp-for="DescripcionProducto" class="form-control"></textarea>
        <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdUbicacionProducto"></label>
        <select asp-for="IdUbicacionProducto" asp-items="Model.Ubicaciones" class="form-control">
            <option value="">-- Seleccione una ubicación --</option>
        </select>
        <span asp-validation-for="IdUbicacionProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadProducto"></label>
        <input asp-for="CantidadProducto" class="form-control" type="number" min="0" />
        <span asp-validation-for="CantidadProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaducidadProducto"></label>
        <input asp-for="CaducidadProducto" class="form-control" type="date" />
        <span asp-validation-for="CaducidadProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarcaProducto"></label>
        <input asp-for="MarcaProducto" class="form-control" />
        <span asp-validation-for="MarcaProducto" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="EstadoProducto" class="form-check-input" type="checkbox" />
        <label asp-for="EstadoProducto" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
