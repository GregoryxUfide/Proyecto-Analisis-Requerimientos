@model Sprint2.ViewModel.ProductoViewModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.NombreProducto</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.DescripcionProducto</dd>

        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Ubicaciones.FirstOrDefault(u => u.Value == Model.IdUbicacionProducto.ToString())?.Text ?? Model.IdUbicacionProducto.ToString()</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.CantidadProducto</dd>

        <dt class="col-sm-2">Caducidad</dt>
        <dd class="col-sm-10">@Model.CaducidadProducto?.ToString("yyyy-MM-dd") ?? "-" </dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@(!string.IsNullOrEmpty(Model.MarcaProducto) ? Model.MarcaProducto : "-")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@((Model.EstadoProducto) ? "Activo" : "Inactivo")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
