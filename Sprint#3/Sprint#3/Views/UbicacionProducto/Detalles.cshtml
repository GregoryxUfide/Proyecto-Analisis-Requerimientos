@model Sprint_2.ViewModel.UbicacionProductoViewModel

@{
    ViewData["Title"] = "Detalles de la Ubicación";
}

<h2>Detalles de la Ubicación</h2>

<div class="card p-4 shadow rounded">
    <dl class="row">
        <dt class="col-sm-4">ID</dt>
        <dd class="col-sm-8">@Model.IdUbicacionProducto</dd>

        <dt class="col-sm-4">Nombre de Ubicación</dt>
        <dd class="col-sm-8">@Model.NombreUbicacionProducto</dd>

        <dt class="col-sm-4">Descripción</dt>
        <dd class="col-sm-8">@Model.DescripcionUbicacionProducto</dd>

        <dt class="col-sm-4">Estado</dt>
        <dd class="col-sm-8">
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
