@model List<Sprint2.ViewModel.RolViewModel>

<h2>Listado de Roles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.Nombre</td>
                <td>@rol.Descripcion</td>
                <td>@(rol.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@rol.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Detalles" asp-route-id="@rol.Id" class="btn btn-sm btn-primary">Detalles</a>
                    <a asp-action="CambiarEstado" asp-route-id="@rol.Id" asp-route-estado="@(rol.Estado ? false : true)" class="btn btn-sm btn-warning">
                        @(rol.Estado ? "Desactivar" : "Activar")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-primary">Crear Nuevo Rol</a>
