@model Sprint2.ViewModel.LimpiezaHabitacionViewModel

@{
    ViewData["Title"] = "Editar Registro de Limpieza";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Editar" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="NombreConserje" class="form-label"></label>
                    <input asp-for="NombreConserje" class="form-control" />
                    <span asp-validation-for="NombreConserje" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Foto" class="form-label"></label>
                    <input type="file" asp-for="Foto" class="form-control" accept="image/*" />
                    @if (Model.Foto != null)
                    {
                        <small class="text-muted">Foto actual:</small>
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Foto)"
                             class="img-thumbnail mt-2" style="max-width: 100px;" />
                    }
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="TareasCompletadas" class="form-label"></label>
            <textarea asp-for="TareasCompletadas" class="form-control" rows="4"></textarea>
            <span asp-validation-for="TareasCompletadas" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
