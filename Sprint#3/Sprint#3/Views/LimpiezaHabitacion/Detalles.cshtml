@model Sprint2.ViewModel.LimpiezaHabitacionViewModel

@{
    ViewData["Title"] = "Detalles de Limpieza";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Conserje:</dt>
                <dd class="col-sm-9">@Model.NombreConserje</dd>

                <dt class="col-sm-3">Tareas Completadas:</dt>
                <dd class="col-sm-9">@Model.TareasCompletadas</dd>

                <dt class="col-sm-3">Fecha/Hora:</dt>
                <dd class="col-sm-9">@Model.FechaHora.ToString("g")</dd>

                @if (Model.Foto != null)
                {
                    <dt class="col-sm-3">Foto:</dt>
                    <dd class="col-sm-9">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Foto)"
                             class="img-thumbnail" style="max-width: 300px;" />
                    </dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-list"></i> Volver al Listado
        </a>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning ms-2">
            <i class="fas fa-edit"></i> Editar
        </a>
    </div>
</div>