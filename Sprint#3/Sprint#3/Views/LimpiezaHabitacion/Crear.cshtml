@model Sprint2.ViewModel.LimpiezaHabitacionViewModel

@{
    ViewData["Title"] = "Nuevo Registro de Limpieza";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Crear" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="NombreConserje" class="form-label"></label>
                    <input asp-for="NombreConserje" class="form-control" autofocus />
                    <span asp-validation-for="NombreConserje" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FotoArchivo" class="form-label"></label>
                    <input type="file" asp-for="FotoArchivo" class="form-control" accept="image/*" />
                    <small class="text-muted">(Opcional)</small>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="TareasCompletadas" class="form-label"></label>
            <textarea asp-for="TareasCompletadas" class="form-control" rows="4"
                      placeholder="Ej: Cambio de sábanas, limpieza de baño..."></textarea>
            <span asp-validation-for="TareasCompletadas" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
