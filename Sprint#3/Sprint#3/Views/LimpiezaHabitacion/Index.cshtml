@model List<Sprint2.ViewModel.LimpiezaHabitacionViewModel>

@{
    ViewData["Title"] = "Registros de Limpieza";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="mb-3">
        <a asp-action="Crear" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Registro
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Conserje</th>
                <th>Tareas Completadas</th>
                <th>Fecha/Hora</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var limpieza in Model)
            {
                <tr>
                    <td>@limpieza.NombreConserje</td>
                    <td>@limpieza.TareasCompletadas</td>
                    <td>@limpieza.FechaHora.ToString("g")</td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@limpieza.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Detalles" asp-route-id="@limpieza.Id" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>