@model Sprint2.ViewModel.UsuarioViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Apellidos</dt>
        <dd class="col-sm-9">@Model.Apellidos</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Gmail</dd>

        <dt class="col-sm-3">Nombre de Usuario</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">
            @if (Model.Roles != null)
            {
                var rol = Model.Roles.FirstOrDefault(r => r.Id == Model.RolId);
                @rol?.Nombre
            }
            else
            {
                <span class="text-muted">No asignado</span>
            }
        </dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
