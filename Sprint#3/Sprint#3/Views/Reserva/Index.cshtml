@model List<Sprint_2.ViewModel.ReservaViewModel>

@{
    ViewData["Title"] = "Listado de Reservas";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @* Filtro por fecha *@
    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="ListarPorFecha" method="post" class="d-flex align-items-end">
                <div class="me-2">
                    <label for="fechaDesde" class="form-label">Filtrar por Fecha de Inicio:</label>
                    <input type="date" name="fechaDesde" id="fechaDesde" class="form-control" required />
                </div>
                <div class="me-2">
                    <button type="submit" class="btn btn-secondary">Filtrar</button>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpiar filtro</a>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Crear" class="btn btn-primary">Nueva Reserva</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].FechaInicio)</th>
                <th>@Html.DisplayNameFor(model => model[0].FechaFinal)</th>
                <th>@Html.DisplayNameFor(model => model[0].NombreReservante)</th>
                <th>@Html.DisplayNameFor(model => model[0].Telefono)</th>
                <th>@Html.DisplayNameFor(model => model[0].Correo)</th>
                <th>@Html.DisplayNameFor(model => model[0].NumHabitacion)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reserva in Model)
            {
                <tr>
                    <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@reserva.FechaFinal.ToString("dd/MM/yyyy")</td>
                    <td>@reserva.NombreReservante</td>
                    <td>@reserva.Telefono</td>
                    <td>@reserva.Correo</td>
                    <td>@reserva.NumHabitacion</td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@reserva.IdReserva" class="btn btn-sm btn-warning me-1">Editar</a>
                        <a asp-action="Detalles" asp-route-id="@reserva.IdReserva" class="btn btn-sm btn-info me-1">Detalles</a>

                        <form asp-action="Eliminar" method="post" asp-route-id="@reserva.IdReserva"
                              onsubmit="return confirm('¿Está seguro de eliminar esta reserva?');" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
