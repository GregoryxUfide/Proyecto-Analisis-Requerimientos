@model Sprint2.ViewModel.HabitacionViewModel

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Número:</dt>
                <dd class="col-sm-9">@Model.NumHabitacion</dd>

                <dt class="col-sm-3">Capacidad:</dt>
                <dd class="col-sm-9">@Model.Capacidad personas</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-3">Camas:</dt>
                <dd class="col-sm-9">@Model.NumCamas</dd>

                <dt class="col-sm-3">Extras:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Extras) ? "N/A" : Model.Extras)</dd>

                <dt class="col-sm-3">Comentarios:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Comentarios) ? "N/A" : Model.Comentarios)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-primary">Volver al Listado</a>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Editar</a>
    </div>
</div>