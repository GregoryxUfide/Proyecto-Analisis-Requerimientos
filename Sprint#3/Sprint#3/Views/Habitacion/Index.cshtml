@model List<Sprint2.ViewModel.HabitacionViewModel>

@{
    ViewData["Title"] = "Listado de Habitaciones";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="mb-3">
        <a asp-action="Crear" class="btn btn-primary">Nueva Habitación</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Número</th>
                <th>Capacidad</th>
                <th>Precio</th>
                <th>Camas</th>
                <th class="text-center">Acciones</th> <!-- Ancho fijo para acciones -->
            </tr>
        </thead>
        <tbody>
            @foreach (var habitacion in Model)
            {
                <tr>
                    <td>@habitacion.NumHabitacion</td>
                    <td>@habitacion.Capacidad personas</td>
                    <td>@habitacion.Precio.ToString("C")</td>
                    <td>@habitacion.NumCamas</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@habitacion.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Detalles" asp-route-id="@habitacion.Id" class="btn btn-sm btn-info">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>