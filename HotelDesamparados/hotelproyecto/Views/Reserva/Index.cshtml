@model List<hotelproyecto.ViewModel.ReservaViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Gestión de Reservas";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Crear" class="btn btn-primary">
            Nueva Reserva
        </a>
    </div>

    <div class="table-responsive">
        <table class="locations-table">
            <thead>
                <tr>
                    <th>Fecha Inicio</th>
                    <th>Fecha Final</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Habitación</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Fecha Inicio">@item.FechaInicio.ToString("g")</td>
                        <td data-label="Fecha Final">@item.FechaFinal.ToString("g")</td>
                        <td data-label="Nombre">@item.Nombre</td>
                        <td data-label="Teléfono">@item.Telefono</td>
                        <td data-label="Correo">@item.Correo</td>
                        <td data-label="Habitación">@item.HabitacionNombre</td>
                        <td data-label="Estado">
                            <span class="status-badge @(item.Estado ? "active" : "inactive")">
                                @(item.Estado ? "Reserva Activa" : "Finalizó Reserva")
                            </span>
                        </td>
                        <td data-label="Acciones" class="actions">
                            <a asp-action="Detalles" asp-route-id="@item.IdReserva" class="btn-action details">
                                Detalles
                            </a>
                            <a asp-action="Editar" asp-route-id="@item.IdReserva" class="btn-action edit">
                                Editar
                            </a>
                            <a asp-action="CambiarEstado" asp-route-id="@item.IdReserva"
                               asp-route-estado="@(item.Estado ? "false" : "true")"
                               class="btn-action @(item.Estado ? "deactivate" : "activate")">
                                @(item.Estado ? "Finalizar" : "Reactivar")
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
