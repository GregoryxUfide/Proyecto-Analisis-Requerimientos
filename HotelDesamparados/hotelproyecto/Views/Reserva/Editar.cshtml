@model hotelproyecto.ViewModel.ReservaViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Reserva";

    var fechaMinima = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <form asp-action="Editar" method="post" class="product-form">
            <input type="hidden" asp-for="IdReserva" />

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input asp-for="FechaInicio" class="form-control" type="datetime-local" min="@fechaMinima" />
                    <span asp-validation-for="FechaInicio" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaFinal" class="form-label"></label>
                    <input asp-for="FechaFinal" class="form-control" type="datetime-local" min="@fechaMinima" />
                    <span asp-validation-for="FechaFinal" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan Pérez" />
                    <span asp-validation-for="Nombre" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: 88881234" maxlength="8" />
                    <span asp-validation-for="Telefono" class="validation-message"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Correo" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="HabitacionId" class="form-label">Habitación</label>
                <select asp-for="HabitacionId" asp-items="Model.Habitaciones" class="form-control">
                    <option value="0">Seleccione una habitación</option>
                </select>
                <span asp-validation-for="HabitacionId" class="validation-message"></span>
            </div>

            <div class="form-group form-switch">
                <input asp-for="Estado" class="form-check-input" role="switch" />
                <label asp-for="Estado" class="form-check-label">Reserva Activa</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaInicioInput = document.querySelector('[name="FechaInicio"]');
            const fechaFinalInput = document.querySelector('[name="FechaFinal"]');

            // Ajusta min en FechaFinal al cambiar FechaInicio
            fechaInicioInput.addEventListener('change', function () {
                const fechaInicio = fechaInicioInput.value;
                fechaFinalInput.min = fechaInicio;

                if (fechaFinalInput.value < fechaInicio) {
                    fechaFinalInput.value = fechaInicio;
                }
            });
        });
    </script>
}
