@model hotelproyecto.ViewModel.ReservaViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detalles de la Reserva";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <div class="product-details">
            <div class="detail-item">
                <span class="detail-label">Fecha Inicio:</span>
                <span class="detail-value">@Model.FechaInicio.ToString("g")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Fecha Final:</span>
                <span class="detail-value">@Model.FechaFinal.ToString("g")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Nombre:</span>
                <span class="detail-value">@Model.Nombre</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Teléfono:</span>
                <span class="detail-value">@Model.Telefono</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Correo:</span>
                <span class="detail-value">@Model.Correo</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Habitación:</span>
                <span class="detail-value">
                    @Model.Habitaciones?.FirstOrDefault(h => h.Value == Model.HabitacionId.ToString())?.Text
            </div>

            <div class="detail-item">
                <span class="detail-label">Estado:</span>
                <span class="detail-value">
                    <span class="status-badge @(Model.Estado ? "active" : "inactive")">
                        @(Model.Estado ? "Reserva Activa" : "Finalizó Reserva")
                    </span>
                </span>
            </div>
        </div>

        <div class="detail-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
            <a asp-action="Editar" asp-route-id="@Model.IdReserva" class="btn btn-primary">
                Editar Reserva
            </a>
        </div>
    </div>
</div>
