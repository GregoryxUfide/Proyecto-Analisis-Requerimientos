@model hotelproyecto.ViewModel.EmpleadoViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>
    
    <div class="card-body">
        <div class="employee-details">
            <div class="detail-item">
                <span class="detail-label">Número de Empleado:</span>
                <span class="detail-value">@Model.NumeroEmpleado</span>
            </div>
            
            <div class="detail-item">
                <span class="detail-label">Salario:</span>
                <span class="detail-value">@Model.SalarioEmpleado.ToString("C")</span>
            </div>
            
            <div class="detail-item">
                <span class="detail-label">Usuario:</span>
                <span class="detail-value">
                     @Model.UsuariosDisponibles.FirstOrDefault(u => u.Id == Model.UsuarioId)?.Username
                </span>
            </div>
            
            <div class="detail-item">
                <span class="detail-label">Correo:</span>
                <span class="detail-value">
                    @Model.UsuariosDisponibles.FirstOrDefault(u => u.Id == Model.UsuarioId)?.Gmail
                </span>
            </div>
            
            <div class="detail-item">
                <span class="detail-label">Rol:</span>
                <span class="detail-value">
                     @Model.RolesDisponibles.FirstOrDefault(r => r.Id == Model.RolId)?.Nombre
                </span>
            </div>
            
            <div class="detail-item">
                <span class="detail-label">Estado:</span>
                <span class="detail-value">
                    <span class="status-badge @(Model.Estado ? "active" : "inactive")">
                        @if(Model.Estado) {
                            <i class="bi bi-check-circle"></i>
                        } else {
                            <i class="bi bi-x-circle"></i>
                        }
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </span>
                </span>
            </div>
        </div>
        
        <div class="detail-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">
                Editar Empleado
            </a>
        </div>
    </div>
</div>