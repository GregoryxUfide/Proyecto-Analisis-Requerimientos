<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gran Hotel Desamparados</title>   
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/usuario.css" asp-append-version="true" />
</head>
<body class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "home-body" : "")">
    <div class="layout">
        <!-- Header Modernizado -->
        <header class="header">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <span class="hotel-name">Gran Hotel</span>
                        <span class="location">Desamparados</span>
                    </a>
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <i class="bi bi-list"></i>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>                                                       
                            @if (Context.Session.GetInt32("UsuarioID") == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn-register" asp-controller="Auth" asp-action="Register">Registrarse</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Reserva">Reserva</a>
                            </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
                                       href="#" id="userDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false"
                                       style="color: var(--beige-claro);">
                                        <i class="bi bi-person-circle fs-4"></i>
                                        <span class="user-name text-truncate" style="max-width: 120px;">
                                            @Context.Session.GetString("Nombre")
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow rounded-3" aria-labelledby="userDropdown" style="background-color: var(--turquesa); border: none; min-width: 180px;">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2" href="@Url.Action("EditarMiPerfil", "Usuario")" style="color: var(--beige-claro);">
                                                <i class="bi bi-person me-1 fs-5"></i> Mi Perfil
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" style="border-color: var(--beige-oscuro);" /></li>
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Auth" asp-action="Logout" style="color: var(--beige-claro);">
                                                <i class="bi bi-box-arrow-right me-1 fs-5"></i> Cerrar Sesión
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="main">
            @RenderBody()
        </main>

        <!-- Footer Modernizado -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 footer-section">
                        <h3>Gran Hotel Desamparados</h3>
                        <p>Tu lugar de descanso en el corazón de Costa Rica</p>
                    </div>
                    
                    <div class="col-md-4 footer-section">
                        <h3>Contacto</h3>
                        <p><i class="bi bi-telephone"></i> 1234-5678</p>
                        <p><i class="bi bi-envelope"></i> contacto@hotel.com</p>
                        <p><i class="bi bi-geo-alt"></i> Desamparados, San José, Costa Rica</p>
                    </div>
                    
                    <div class="col-md-4 footer-section">
                        <h3>Síguenos</h3>
                        <div class="social-icons">
                            <a href="@ViewBag.Facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                            <a href="@ViewBag.Instagram" target="_blank"><i class="bi bi-instagram"></i></a>
                            <a href="@ViewBag.WhatsApp" target="_blank"><i class="bi bi-whatsapp"></i></a>
                        </div>
                    </div>
                </div>
                
                <div class="footer-bottom">
                    <p>&copy; 2025 Gran Hotel Desamparados. Todos los derechos reservados.</p>
                    <a asp-controller="Home" asp-action="Privacy">Políticas de Privacidad</a>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuery y validaciones (usar CDN si hay problemas con los locales) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap, tu JS del sitio, etc -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scripts específicos por vista -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>