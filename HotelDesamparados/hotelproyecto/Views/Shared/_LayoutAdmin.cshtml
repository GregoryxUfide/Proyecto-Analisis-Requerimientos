<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Admin - Gran Hotel Desamparados</title>
    
    <!-- Fuentes de Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar Modernizado -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <img src="~/img/logo-hotel-white.png" alt="Logo Gran Hotel Desamparados" class="sidebar-logo">
                <h3 class="sidebar-title">Panel Administrativo</h3>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a asp-controller="Dashboard" asp-action="Index" class="nav-link">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuario" asp-action="Index" class="nav-link">
                            <i class="bi bi-people"></i>
                            <span>Usuarios</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Rol" asp-action="Index" class="nav-link">
                            <i class="bi bi-shield-lock"></i>
                            <span>Roles</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Producto" asp-action="Index" class="nav-link">
                            <i class="bi bi-box-seam"></i>
                            <span>Productos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Empleado" asp-action="Index" class="nav-link">
                            <i class="bi bi-person-badge"></i>
                            <span>Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Habitacion" asp-action="Index" class="nav-link">
                            <i class="bi bi-door-open"></i>
                            <span>Habitaciones</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Reserva" asp-action="Index" class="nav-link">
                            <i class="bi bi-calendar-check"></i>
                            <span>Reservas</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="LimpiezaHabitacion" asp-action="Index" class="nav-link">
                            <i class="bi bi-bucket"></i>
                            <span>Limpieza</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="UbicacionProducto" asp-action="Index" class="nav-link">
                            <i class="bi bi-pin-map"></i>
                            <span>Ubicaciones</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Contabilidad" asp-action="Index" class="nav-link">
                            <i class="bi bi-pin-map"></i>
                            <span>Contabilidad</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Reporteria" asp-action="Index" class="nav-link">
                            <i class="bi bi-pin-map"></i>
                            <span>Reporteria</span>
                        </a>
                    </li>
                </ul>
            </nav>

            
            <div class="sidebar-footer">
                <a asp-controller="Auth" asp-action="Logout" class="logout-btn">
                    <i class="bi bi-box-arrow-left"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Bar -->
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="header-right">
                    <div class="admin-profile">                        
                        <span class="profile-name">Administrador</span>
                    </div>
                </div>
            </header>
            
            <!-- Content -->
            <div class="admin-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>