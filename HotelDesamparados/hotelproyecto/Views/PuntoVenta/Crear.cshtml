@model hotelproyecto.ViewModel.PuntoVentaViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Nueva Venta";

    // Opciones fijas para método de pago
    var metodosPago = new List<SelectListItem>
    {
        new SelectListItem { Value = "Efectivo", Text = "Efectivo" },
        new SelectListItem { Value = "Tarjeta", Text = "Tarjeta" },
        new SelectListItem { Value = "Transferencia", Text = "Transferencia" },
        new SelectListItem { Value = "Sinpe Movil", Text = "Sinpe Movil" }
    };
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <form asp-action="Crear" method="post" class="role-form">
            <div class="form-group">
                <label asp-for="DescripcionVenta" class="form-label"></label>
                <input asp-for="DescripcionVenta" class="form-control" placeholder="Ingrese la descripción de la venta" />
                <span asp-validation-for="DescripcionVenta" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Metodo_Pago" class="form-label"></label>
                <select asp-for="Metodo_Pago" class="form-select" asp-items="metodosPago">
                    <option value="">-- Seleccione método de pago --</option>
                </select>
                <span asp-validation-for="Metodo_Pago" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descuento" class="form-label"></label>
                <input asp-for="Descuento" class="form-control" placeholder="Ingrese el descuento (0 - 100)" />
                <span asp-validation-for="Descuento" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReservaId" class="form-label"></label>
                <select asp-for="ReservaId" asp-items="Model.Reservas" class="form-select">
                    <option value="">-- Seleccione una reserva --</option>
                </select>
                <span asp-validation-for="ReservaId" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmpleadoId" class="form-label"></label>
                <select asp-for="EmpleadoId" asp-items="Model.Empleados" class="form-select">
                    <option value="">-- Seleccione un empleado --</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Guardar Venta
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
