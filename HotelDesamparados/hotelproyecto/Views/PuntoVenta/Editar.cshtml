@model hotelproyecto.ViewModel.PuntoVentaViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Venta";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <form asp-action="Editar" method="post" class="employee-form">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="DescripcionVenta" class="form-label"></label>
                <input asp-for="DescripcionVenta" class="form-control" />
                <span asp-validation-for="DescripcionVenta" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Metodo_Pago" class="form-label"></label>
                <select asp-for="Metodo_Pago" class="form-control">
                    <option value="">-- Seleccione método de pago --</option>
                    <option value="Efectivo" selected="@(Model.Metodo_Pago == "Efectivo" ? "selected" : "")">Efectivo</option>
                    <option value="Tarjeta" selected="@(Model.Metodo_Pago == "Tarjeta" ? "selected" : "")">Tarjeta</option>
                    <option value="Transferencia" selected="@(Model.Metodo_Pago == "Transferencia" ? "selected" : "")">Transferencia</option>
                    <option value="Sinpe Movil" selected="@(Model.Metodo_Pago == "Sinpe Movil" ? "selected" : "")">Sinpe Movil</option>
                </select>
                <span asp-validation-for="Metodo_Pago" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descuento" class="form-label"></label>
                <input asp-for="Descuento" class="form-control" />
                <span asp-validation-for="Descuento" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReservaId" class="form-label"></label>
                <select asp-for="ReservaId" asp-items="Model.Reservas" class="form-control">
                    <option value="">-- Seleccione una reserva --</option>
                </select>
                <span asp-validation-for="ReservaId" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmpleadoId" class="form-label"></label>
                <select asp-for="EmpleadoId" asp-items="Model.Empleados" class="form-control">
                    <option value="">-- Seleccione un empleado --</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
