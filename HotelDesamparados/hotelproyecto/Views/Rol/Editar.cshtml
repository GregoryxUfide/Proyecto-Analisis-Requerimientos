@model hotelproyecto.ViewModel.RolViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Rol";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <form asp-action="Editar" method="post" class="employee-form">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
