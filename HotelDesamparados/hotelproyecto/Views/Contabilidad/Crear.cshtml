@model hotelproyecto.ViewModel.ContabilidadViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Nuevo Registro de Contabilidad";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <form asp-action="Crear" method="post">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Fecha" class="form-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Monto" class="form-label">Monto</label>
                    <div class="input-group">
                        <span class="input-group-text">₡</span>
                        <input asp-for="Monto" class="form-control" placeholder="Ej: 150000.00" />
                    </div>
                    <span asp-validation-for="Monto" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Detalle" class="form-label">Detalle</label>
                    <input asp-for="Detalle" class="form-control" placeholder="Ej: Compra de suministros" />
                    <span asp-validation-for="Detalle" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Comentario" class="form-label">Comentario</label>
                    <input asp-for="Comentario" class="form-control" placeholder="Ej: Factura #12345" />
                    <span asp-validation-for="Comentario" class="validation-message"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar Registro</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('Monto')?.addEventListener('blur', function () {
            if (this.value) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });
    </script>
}
