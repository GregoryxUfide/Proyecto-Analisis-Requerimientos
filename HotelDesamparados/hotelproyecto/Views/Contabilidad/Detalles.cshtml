@model hotelproyecto.ViewModel.ContabilidadViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detalles de Contabilidad";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <div class="employee-details">
            <div class="detail-item">
                <span class="detail-label">ID Contabilidad:</span>
                <span class="detail-value">@Model.IdContabilidad</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Fecha:</span>
                <span class="detail-value">@Model.Fecha.ToString()</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Monto:</span>
                <span class="detail-value">@Model.Monto.ToString("C")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Detalle:</span>
                <span class="detail-value">@Model.Detalle</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Comentario:</span>
                <span class="detail-value">@Model.Comentario</span>
            </div>
        </div>

        <div class="detail-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
            <a asp-action="Editar" asp-route-id="@Model.IdContabilidad" class="btn btn-primary">
                Editar Contabilidad
            </a>
        </div>
    </div>
</div>
