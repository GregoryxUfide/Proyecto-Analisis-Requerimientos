@model hotelproyecto.ViewModel.UbicacionProductoViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Ubicación de Producto";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>
    
    <div class="card-body">
        <form asp-action="Editar" method="post" class="location-form">
            <input type="hidden" asp-for="IdUbicacionProducto" />
            
            <div class="form-group">
                <label asp-for="NombreUbicacionProducto" class="form-label">Nombre de Ubicación</label>
                <input asp-for="NombreUbicacionProducto" class="form-control" placeholder="Ej: Almacén principal, Estante A1" />
                <span asp-validation-for="NombreUbicacionProducto" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescripcionUbicacionProducto" class="form-label">Descripción</label>
                <textarea asp-for="DescripcionUbicacionProducto" class="form-control" rows="3" 
                          placeholder="Descripción detallada de la ubicación"></textarea>
                <span asp-validation-for="DescripcionUbicacionProducto" class="validation-message"></span>
            </div>

            <div class="form-group form-switch">
                <input asp-for="Estado" class="form-check-input" role="switch" />
                <label asp-for="Estado" class="form-check-label">Ubicación activa</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                   Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}