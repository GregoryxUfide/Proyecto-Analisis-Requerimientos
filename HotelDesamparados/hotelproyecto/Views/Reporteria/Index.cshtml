@model List<hotelproyecto.ViewModel.ReporteriaViewModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Gestión de Reportes";
}

<div class="admin-card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="table-responsive">
        <form method="post" asp-action="DescargarPDF">
            <table class="employees-table">
                <thead>
                    <tr>
                        <th>Tabla</th>
                        <th>Descripción</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tabla in Model)
                    {
                        <tr>
                            <td data-label="Tabla">@tabla.NombreTabla</td>
                            <td data-label="Descripción">@tabla.DescripcionTabla</td>
                            <td data-label="Acción">
                                <button type="submit" name="nombreTabla" value="@tabla.NombreTabla" class="btn btn-primary">
                                    Descargar PDF
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
