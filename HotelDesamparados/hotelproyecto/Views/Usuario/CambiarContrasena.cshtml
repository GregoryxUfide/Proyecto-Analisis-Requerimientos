@model hotelproyecto.ViewModel.RecuperacionContrasenaViewModel

@{
    ViewData["Title"] = "Nueva Contraseña";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>@ViewData["Title"]</h2>
            <p>Establece tu nueva contraseña para continuar</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="auth-alert">@ViewBag.Error</div>
        }

        <form asp-action="NuevaContrasena" method="post" class="auth-form">
            <input type="hidden" name="usuarioId" value="@ViewBag.UsuarioId" />
            <input type="hidden" name="tokenId" value="@ViewBag.TokenId" />

            <div class="form-group">
                <label asp-for="NuevaContrasena" class="form-label">Nueva Contraseña</label>
                <input asp-for="NuevaContrasena" type="password" class="form-input" required minlength="6" placeholder="••••••••" />
                <span asp-validation-for="NuevaContrasena" class="text-danger"></span>

                <div class="password-strength">
                    <div class="strength-bar-container">
                        <div class="strength-bar"></div>
                    </div>
                    <p class="strength-text">Contraseña débil</p>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                <input asp-for="ConfirmarContrasena" type="password" class="form-input" required minlength="6" placeholder="••••••••" />
                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="auth-button">Actualizar Contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Validación de fuerza de contraseña
        document.querySelector('input[name="NuevaContrasena"]').addEventListener('input', function () {
            const strengthBar = document.querySelector('.strength-bar');
            const strengthText = document.querySelector('.strength-text');
            const password = this.value;
            let strength = 0;

            if (password.length > 0) strength += 1;
            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;

            const width = (strength / 5) * 100;
            strengthBar.style.width = width + '%';

            if (strength <= 2) {
                strengthBar.style.backgroundColor = '#e74c3c';
                strengthText.textContent = 'Contraseña débil';
            } else if (strength <= 4) {
                strengthBar.style.backgroundColor = '#f39c12';
                strengthText.textContent = 'Contraseña moderada';
            } else {
                strengthBar.style.backgroundColor = '#2ecc71';
                strengthText.textContent = 'Contraseña fuerte';
            }
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
