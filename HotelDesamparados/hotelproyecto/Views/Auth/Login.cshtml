@{
    ViewData["Title"] = "Login";
    Layout = "_Layout"; // Asegúrate de que use tu layout
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">            
            <h2>Bienvenido al Gran Hotel Desamparados</h2>
            <p>Inicia sesión para acceder a tu cuenta</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="login-alert">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Login" class="login-form">
            <div class="form-group">
                <label for="gmail" class="form-label">Correo Electrónico</label>
                <div class="input-group">                    
                    <input type="email" class="form-input" id="gmail" name="gmail" placeholder="tu@correo" required />
                </div>
            </div>

            <div class="form-group">
                <label for="contrasena" class="form-label">Contraseña</label>
                <div class="input-group">                    
                    <input type="password" class="form-input" id="contrasena" name="contrasena" placeholder="••••••••" required />                    
                </div>
            </div>

            <button type="submit" class="login-button">Ingresar</button>

            <div class="login-divider">
                <span></span>
            </div>

            <p class="register-link">
                <a asp-controller="Recuperacion" asp-action="Solicitar">¿Olvidaste tu contraseña?</a>
            </p>

            <p class="register-link">
                ¿No tienes una cuenta? <a asp-action="Register">Regístrate aquí</a>
            </p>
        </form>
    </div>
</div>
@{
  await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
