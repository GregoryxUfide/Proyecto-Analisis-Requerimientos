@model Sprint_2.Models.UbicacionProducto

@{
    ViewData["Title"] = "Detalle de Ubicación";
}

<h2>Detalle de Ubicación</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.IdUbicacionProducto</dd>

        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.NombreUbicacionProducto</dd>

        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.DescripcionUbicacionProducto</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.IdUbicacionProducto" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>