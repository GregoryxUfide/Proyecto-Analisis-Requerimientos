@model List<Sprint_2.Models.UbicacionProducto>

@{
    ViewData["Title"] = "Gestión de Ubicaciones - Gran Hotel Desamparados";
}

<div class="usuarios-container">
    <div class="usuarios-header">
        <h2>Gestión de Ubicaciones</h2>
        <p>Administra las ubicaciones de productos del sistema</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert-error">
            <span class="alert-icon">!</span>
            @TempData["Error"]
        </div>
    }

    <div class="usuarios-actions">
        <a class="btn-create" asp-action="Create">
            <span class="btn-icon">+</span> Crear Nueva Ubicación
        </a>
    </div>

    <div class="usuarios-table-container">
        <table class="usuarios-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ubicacion in Model)
                {
                    <tr>
                        <td>@ubicacion.IdUbicacionProducto</td>
                        <td>@ubicacion.NombreUbicacionProducto</td>
                        <td>@ubicacion.DescripcionUbicacionProducto</td>
                        <td class="actions-cell">
                            <a class="btn-details" asp-action="Details" asp-route-id="@ubicacion.IdUbicacionProducto">
                                <i class="action-icon"></i> Detalle
                            </a>
                            <a class="btn-edit" asp-action="Edit" asp-route-id="@ubicacion.IdUbicacionProducto">
                                <i class="action-icon">✏️</i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
