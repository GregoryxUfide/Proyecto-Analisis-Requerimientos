@model Sprint_2.Models.UbicacionProducto

@{
    ViewData["Title"] = "Editar Ubicación";
}

<h2>Editar Ubicación</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdUbicacionProducto" />

    <div class="form-group">
        <label asp-for="NombreUbicacionProducto" class="control-label"></label>
        <input asp-for="NombreUbicacionProducto" class="form-control" />
        <span asp-validation-for="NombreUbicacionProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescripcionUbicacionProducto" class="control-label"></label>
        <input asp-for="DescripcionUbicacionProducto" class="form-control" />
        <span asp-validation-for="DescripcionUbicacionProducto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>