@model IEnumerable<Sprint_2.Models.Rol>

@{
    ViewData["Title"] = "Gestión de Roles - Gran Hotel Desamparados";
}

<div class="usuarios-container">
    <div class="usuarios-header">
        <h2>Gestión de Roles</h2>
        <p>Administra los roles de usuarios del sistema</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert-error">
            <span class="alert-icon">!</span>
            @TempData["Error"]
        </div>
    }

    <div class="usuarios-actions">
        <a class="btn-create" asp-action="Create">
            <span class="btn-icon">+</span> Crear Nuevo Rol
        </a>
    </div>

    <div class="usuarios-table-container">
        <table class="usuarios-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rol in Model)
                {
                    <tr>
                        <td>@rol.Id</td>
                        <td>@rol.Nombre</td>
                        <td class="actions-cell">
                            <a class="btn-edit" asp-action="Edit" asp-route-id="@rol.Id">
                                <i class="action-icon">✏️</i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
