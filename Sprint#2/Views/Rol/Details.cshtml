@model Sprint_2.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h2>Detalles de Usuario</h2>

<div>
    <h4>@Model.Nombre @Model.Apellidos</h4>
    <dl class="row">
        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Gmail</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Rol?.Nombre</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@((Model.Estado) ? "Activo" : "Inactivo")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a lista</a>
</p>
