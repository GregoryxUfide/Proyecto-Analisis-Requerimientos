@model Sprint_2.Models.Usuario

@{
    ViewData["Title"] = "Registro - Gran Hotel Desamparados";
}

<div class="register-container">
    <div class="register-wrapper">
        <div class="register-header">
            <img src="https://via.placeholder.com/100x100?text=GH" alt="Logo Gran Hotel Desamparados" class="logo">
            <h2>Únete a Gran Hotel Desamparados</h2>
            <p>Crea tu cuenta para disfrutar de nuestros servicios</p>
        </div>

        <form asp-action="Register" method="post" class="register-form">
            <div class="form-row">
                <div class="form-group">
                    <div class="input-with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#2c5d61" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                        <input asp-for="Nombre" placeholder="Nombre" required>
                    </div>
                    <span asp-validation-for="Nombre" class="text-validation"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#2c5d61" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                        <input asp-for="Apellidos" placeholder="Apellidos" required>
                    </div>
                    <span asp-validation-for="Apellidos" class="text-validation"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-with-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#2c5d61" viewBox="0 0 16 16">
                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                    </svg>
                    <input asp-for="Gmail" type="email" placeholder="Correo electrónico" required>
                </div>
                <span asp-validation-for="Gmail" class="text-validation"></span>
            </div>

            <div class="form-group">
                <div class="input-with-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#2c5d61" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                    <input asp-for="Username" placeholder="Nombre de usuario" required>
                </div>
                <span asp-validation-for="Username" class="text-validation"></span>
            </div>

            <div class="form-group">
                <div class="input-with-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#2c5d61" viewBox="0 0 16 16">
                        <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z" />
                        <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                    </svg>
                    <input asp-for="Contrasena" type="password" placeholder="Contraseña" required>
                </div>
                <span asp-validation-for="Contrasena" class="text-validation"></span>
                <div class="password-requirements">
                    <p>La contraseña debe contener:</p>
                    <ul>
                        <li>Al menos 8 caracteres</li>
                        <li>Una letra mayúscula</li>
                        <li>Un número</li>
                        <li>Un carácter especial</li>
                    </ul>
                </div>
            </div>

            <div class="form-terms">
                <label class="terms-check">
                    <input type="checkbox" required>
                    <span>Acepto los <a href="#">términos y condiciones</a> y la <a href="#">política de privacidad</a></span>
                </label>
            </div>

            <button type="submit" class="register-btn">Registrarse</button>

            <div class="login-link">
                ¿Ya tienes una cuenta? <a asp-controller="Auth" asp-action="Login">Inicia sesión aquí</a>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert-error">@ViewBag.Error</div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}