@model Sprint_2.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>Detalles del Producto</h1>

<div>
    <h4>@Model.NombreProducto</h4>
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.DescripcionProducto</dd>

        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.UbicacionProducto?.NombreUbicacionProducto</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.CantidadProducto</dd>

        <dt class="col-sm-2">Caducidad</dt>
        <dd class="col-sm-10">@Model.CaducidadProducto?.ToShortDateString()</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.MarcaProducto</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.EstadoProducto ? "Activo" : "Inactivo"</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</p>
