@model List<hotelproyecto.ViewModel.UbicacionProductoViewModel>

@{
    ViewData["Title"] = "Listado de Ubicaciones de Productos";
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nueva Ubicación</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreUbicacionProducto</td>
                <td>@item.DescripcionUbicacionProducto</td>
                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.IdUbicacionProducto" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@item.IdUbicacionProducto" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="CambiarEstado" asp-route-id="@item.IdUbicacionProducto" asp-route-estado="@(item.Estado ? false : true)" class="btn btn-secondary btn-sm">
                        @(item.Estado ? "Desactivar" : "Activar")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
